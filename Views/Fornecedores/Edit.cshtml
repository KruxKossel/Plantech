@model Plantech.ViewModels.FornecedoreViewModel

@{
    ViewData["Title"] = "Edit";
}

@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}
<br><br>
<h2 class="text-start">Editar Fornecedor</h2>

<div class="row bg-white border shadow rounded-2 p-2 m-2" style="justify-content: center;">
        <form asp-action="Edit" method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" style="margin-bottom: 10px;" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="RazaoSocial" class="control-label"></label>
                <input asp-for="RazaoSocial" class="form-control" style="margin-bottom: 10px;" />
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" style="margin-bottom: 10px;" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" style="margin-bottom: 10px;" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <br>
                <select asp-for="Status" class="form-control">
                    <option value="ativo">Ativo</option>
                    <option value="inativo">Inativo</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="mt-2 text-end">
                <a asp-action="Index" class="btn btn-secondary mx-2" style="width: 150px;">Voltar</a>
                <button type="submit" class="btn btn-primary" style="width: 150px;">Salvar</button>
            </div>
        </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
