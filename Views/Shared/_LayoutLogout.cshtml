<!DOCTYPE html>
<html lang="pt-br">

    <head>
        <meta charset="utf-8">
        <title>@ViewData["Title"] - Plantech</title>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="" name="keywords">
        <meta content="" name="description">

        <!-- Google Web Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet"> 

        <!-- Icon Font Stylesheet -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

        <!-- Libraries Stylesheet -->
        <link href="lib/lightbox/css/lightbox.min.css" rel="stylesheet">
        <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

        


        <!-- Customized Bootstrap Stylesheet -->
        <link href="css/bootstrap.min.css" rel="stylesheet">

        <!-- Template Stylesheet -->
        <link href="css/style.css" rel="stylesheet">

        @RenderSection("Styles", required: false)

    </head>

    <body>
        <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->


        <!-- Navbar start -->
        <div class="container-fluid fixed-top">
            <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">123 Av. Rural, Ed. Algoritmos Suites, São Paulo</a></small>
                <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">fazendaurbana@plantech.com</a></small>
                <small class="me-3"><i class="fab fa-whatsapp me-2 text-secondary"></i><a href="#"
                class="text-white">(11) 9999 5552</a></small>

                </div>
            </div>
            </div>
            <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand"><h1 class="text-primary display-6">Plantech</h1></a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Home</a>
                    <a href="#produtos" class="nav-item nav-link">Hortaliças</a>
                    <a href="#vendidos" class="nav-item nav-link">Mais Vendidos</a>
                    <a href="#parceiros" class="nav-item nav-link">Parceiros</a>
                </div>
                <div class="d-flex m-3 me-0">
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <a asp-controller="Login" asp-action="Logout" class="my-auto">
                        <i class="fas fa-user fa-2x"></i>
                    </a>
                    }
                    else
                    {
                          <a asp-controller="Login" asp-action="Logout" class="my-auto d-flex align-items-center">
                                <span>Faça Login</span> <!-- Exibe o nome do usuário -->
                                <i class="fas fa-user fa-2x ms-2"></i> <!-- Adiciona margem à esquerda do ícone -->
                            </a>
                    }
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
                <!-- Navbar End -->

              @RenderBody()

                <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
            <div class="container py-5">
                <div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(226, 175, 24, 0.5) ;">
                    <div class="row g-4">
                        <div class="col-lg-6">
                            <a href="#">
                                <h1 class="text-primary mb-0">Plantech</h1>
                                <p class="text-secondary mb-0">Hortaliças Frescas</p>
                            </a>
                        </div>
                        @* <div class="col-lg-6">
                            <div class="position-relative mx-auto">
                                <input class="form-control border-0 w-100 py-3 px-4 rounded-pill" type="number" placeholder="Seu Email">
                                <button type="submit" class="btn btn-primary border-0 border-secondary py-3 px-4 position-absolute rounded-pill text-white" style="top: 0; right: 0;">Receba Novidades</button>
                            </div>
                        </div> *@
                        <div class="col-lg-6">
                            <div class="d-flex justify-content-end pt-3">
                                <a class="btn  btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-youtube"></i></a>
                                <a class="btn btn-outline-secondary btn-md-square rounded-circle" href=""><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <div class="footer-item">
                            <h4 class="text-light mb-3">Nosso Modelo de Negócio B2B</h4>
                            <p>Varejo Local</p>
                            <p>FoodService</p>
                            @* <a href="" class="btn border-secondary py-2 px-4 rounded-pill text-primary">Continue Lendo!</a> *@
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="d-flex flex-column text-start footer-item">
                            <h4 class="text-light mb-3">Nossas Informações</h4>
                            <a class="btn-link" href="">Sobre Nós</a>
                            <a class="btn-link" href="">Contate-nos</a>
                            <a class="btn-link" href="">Certificação</a>
                            
                            
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="d-flex flex-column text-start footer-item">
                            <h4 class="text-light mb-3">Fazenda Urbana</h4>
                            <a class="btn-link" href="">Hortaliças</a>
                            <a class="btn-link" href="">Mais Vendidos</a>
                            <a class="btn-link" href="">Parceiros</a>
                            
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="footer-item">
                            <h4 class="text-light mb-3">Contatos</h4>
                            <p>Email:fazendaurbana@plantech.com</p>
                            <p>Phone: +55 11 9999 55 52</p>
                            <p>Formas de Pagamento</p>
                            <img src="img/payment.png" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->

        <!-- Copyright Start -->
        <div class="container-fluid copyright bg-dark py-4">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center mb-3 mb-md-0">
                        <span class="text-light"><a href="#"><i class="fas fa-copyright text-light me-2"></i>Plantech</a>, Todos os direitos reservados.</span>
                    </div>
