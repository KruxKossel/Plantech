@model Plantech.ViewModels.HortalicaViewModel


@section Styles {
<link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}
<h2>@ViewData["Title"]</h2>
<div class="row mt-4">
    <div class="border rounded-2 p-2 shadow  col-12 col-md-7">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="margin-bottom: 10px;" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"
                    style="height: 80px; vertical-align: top; margin-bottom: 10px;"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control"
                    style="height: 150px; vertical-align: top;margin-bottom: 10px;"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" readonly style="margin-bottom: 60px;" />
                    <span asp-validation-for="Status" class="text-danger" ></span>
                </div>
            <div class="form-group mt-3 text-end">
                <a asp-action="Index" class="btn btn-secondary mx-2" >Voltar</a>
                <button type="submit" class="btn btn-primary" >Salvar</button>
            </div>
        </form>
    </div>

    <div class="col-12 col-md-5 d-grid justify-content-center">
        <form asp-action="EditImagem" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Nome" />
            <div class="form-group">
                <input asp-for="ImagemArquivo" class="form-control" type="file" />
                <span asp-validation-for="ImagemArquivo" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.CaminhoImagem))
                {
                    <img src="~/images/@Model.CaminhoImagem" class="img-thumbnail mt-2"
                        style="aspect-ratio: 1/1; object-fit: cover; max-width: 355px;" />

                }

            </div>
            <div class=" mt-4 text-end form-group">
                <button type="submit" class="btn btn-primary" style="margin-left: -20px;width: 150px">Salvar Foto</button>
            </div>
            
        </form>

    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
