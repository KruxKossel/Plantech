@model Plantech.ViewModels.HortalicaViewModel
@{
    ViewData["Title"] = "Adicionar Hortali√ßas";
}
@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}

<br>
<h2>@ViewData["Title"]</h2>
<div class="">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row ms-2">
            <div class="card col-12 col-md-6 p-2">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control"
                        style="height: 150px; vertical-align: top;margin-bottom: 10px;"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Observacoes" class="control-label"></label>
                    <textarea asp-for="Observacoes" class="form-control"
                        style="height: 150px; vertical-align: top;margin-bottom: 10px;"></textarea>
                    <span asp-va lidation-for="Observacoes" class="text-danger"></span>

                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label asp-for="ImagemArquivo" class="control-label"></label>
                    <input asp-for="ImagemArquivo" class="form-control" type="file" id="imageUpload"
                        onchange="previewImage(event)" />
                    <span asp-validation-for="ImagemArquivo" class="text-danger"></span>
                </div>

                <img id="imagePreview" src="" alt="Imagem selecionada"
                    style="display:none; width: 640px; height: 440px; border: 2px solid #ccc; margin-top: 10px; object-fit: cover;" />


            </div>
            <div class="form-group text-end mt-2">
                <a asp-action="Index" class="btn btn-secondary mx-2" style=" width: 150px;">Voltar</a>
                <button type="submit" class="btn btn-primary">Adicionar</button>
            </div>

    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
