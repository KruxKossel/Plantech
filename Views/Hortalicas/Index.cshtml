

@model IEnumerable<Plantech.DTOs.HortalicaDTO>


@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}
@if (User.IsInRole("Agricultor") || User.IsInRole("Administrador"))
{
    <h2>@ViewData["Title"]</h2>
    <div class="card-index m-0 p-0 px-1 rounded-1 position-relative container-fluid">
        <div style="height: 440px; overflow-y: auto;">
            <table class="table table-striped table-hover">
        
                <thead>
                    <tr class="position-sticky top-0 bg-white">
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Observações</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Descricao</td>
                            <td style="width: 560px;">@item.Observacoes</td>
                            <td style="width: 180px;">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i
                                        class="bi bi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i
                                        class="bi bi-trash"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i
                                        class="bi bi-info-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-end mt-2 p-0 d-flex justify-content-end align-items-center position-absolute w-100" style="right: 5px; bottom:15px;">
            <a asp-controller="Agricultor" asp-action="Index" class="btn btn-secondary mx-2">Voltar a Home</a>
            <a asp-action="Create" class="btn btn-primary">Adicionar Hortaliça</a>
        </div>
    </div>
}

@if (User.IsInRole("Vendedor"))
{
    <h2>@ViewData["Title"]</h2>
    <div class="card-index m-0 p-0 px-1 rounded-1">
        <div style="height: 440px; overflow-y: auto;" class="p-0">
            <table class="table table-striped table-hover">
        
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Observações</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Descricao</td>
                            <td style="width: 560px;">@item.Observacoes</td>
                            <td style="width: 180px;">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <a asp-controller="Vendedor" asp-action="Index" class="btn btn-secondary">Voltar a Home</a>
    </div>
}
