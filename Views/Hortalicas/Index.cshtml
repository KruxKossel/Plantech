@model IEnumerable<Plantech.DTOs.HortalicaDTO>
@{
    <br>
    ViewData["Title"] = "Lista de Hortaliças";
}
@if (User.IsInRole("Agricultor") || User.IsInRole("Administrador"))
{
    <h2>@ViewData["Title"]</h2>
    <br>
    <div class="card-index">
        <div style="max-height: 350px; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <br>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Observações</th>
                        <th>Imagem</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Descricao</td>
                            <td style="width: 550px;">@item.Observacoes</td>
                            <td style="display: none;">
                                @if (!string.IsNullOrEmpty(item.CaminhoImagem))
                                {
                                    <img src="~/images/@item.CaminhoImagem" class="img-thumbnail"
                                        style="max-width: 100px; max-height: 100px;" />
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-end" style="margin-right: 15px;">
            <br>
            <a asp-action="Create" class="btn btn-primary">Adicionar Hortaliça</a><br><br>
        </div>
    </div>


}

@if (User.IsInRole("Vendedor"))
{
    <h2>@ViewData["Title"]</h2>

    <div>
        <a asp-controller="Vendedor" asp-action="Index" class="btn btn-primary">Voltar a Home</a>
    </div>
    <hr>
    <div style="max-height: 300px; overflow-y: auto;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Observações</th>
                    <th>Imagem</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Descricao</td>
                        <td>@item.Observacoes</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.CaminhoImagem))
                            {
                                <img src="~/images/@item.CaminhoImagem" class="img-thumbnail"
                                    style="max-width: 100px; max-height: 100px;" />
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
            <div class="text-end">
                <a asp-action="Create" class="btn btn-primary">Adicionar Hortaliça</a><br><br>
            </div>
        </table>


    </div>
}

