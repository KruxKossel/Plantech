@model Plantech.ViewModels.HortalicaViewModel
@{
    ViewData["Title"] = "Editar Imagem da Hortaliça";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditImagem" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Nome" /> <!-- Campo oculto para evitar erro de validação -->
    <div class="form-group">
        <label asp-for="ImagemArquivo" class="control-label"></label>
        <input asp-for="ImagemArquivo" class="form-control" type="file" />
        <span asp-validation-for="ImagemArquivo" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.CaminhoImagem))
        {
            <img src="~/images/@Model.CaminhoImagem" class="img-thumbnail mt-2" />
        }
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
