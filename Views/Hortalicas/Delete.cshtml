@model Plantech.DTOs.HortalicaDTO


@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}

<h2>@ViewData["Title"]</h2><br>

<h3>Você realmente deseja deletar esta hortaliça?</h3>
<div>
    <hr />
    <div class="border rounded-2 shadow p-2 bg-white">
        <dl class="row" style="height: 100%; overflow-y: auto;">
            <div class="col-12 col-md-6" style="max-height: 100%; overflow-y: auto;">
                <dt class="">
                    Nome
                </dt>
                <dd class="mb-4">
                    @Model.Nome
                </dd>
                <dt class="">
                    Descrição
                </dt>
                <dd class="mb-4">
                    @Model.Descricao
                </dd>
                <dt class="">
                    Observações
                </dt>
                <dd class="">
                    @Model.Observacoes
                </dd>
            </div>

            <dd class="col-12 col-md-6">
                <img src="~/images/@Model.CaminhoImagem" alt="@Model.Nome"
                    style="width: 450px; height: 300px; object-fit: cover; border-radius: 10px;" />
            </dd>
        </dl>
    </div>


    <form asp-action="Delete" class="text-end mt-2">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary mx-2">Cancelar</a>
        <button type="submit" class="btn btn-danger">Deletar</button>

    </form>
</div>
