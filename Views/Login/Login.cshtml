@model Plantech.ViewModels.LoginViewModel


@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
}

<div class="d-flex justify-content-center align-items-center" style="height: 88h;">

    <div class="row">
        <div class="container">
            <div class="row">
                <div class="d-flex justify-content-center align-items-center">
                    <img style=" width: 250px; margin-top: 5px;" src="~/images/logo.png" alt="">
                </div>
            </div>
        </div>
        <div class="border m-auto rounded-2 pt-4" style="width: 500px;">

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Nome:</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Senha:</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 d-flex justify-content-end w-100 p-0">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

            <!-- Link para criar uma nova conta -->
            <div class="form-group mt-2">
                <p style="font-size: .8em;">NÃ£o tem uma conta? <a asp-controller="Login" asp-action="Create">Crie uma
                        aqui</a>.</p>
            </div>
        </div>

    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
