@model Plantech.ViewModels.FuncionarioCreateViewModel

@{
    ViewData["Title"] = "Primeiro Acesso";
}


@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}


<br>
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="row ms-2">

        <!-- Usuário -->
        <div class="card col-6 p-4">
            <h4>Dados para Login</h4>
            <div class="form-group">
                <label asp-for="NomeUsuario" class="control-label"></label>
                <input asp-for="NomeUsuario" class="form-control" style="margin-bottom: 20px;" placeholder="Usarname para fazer Login"/>
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" style="margin-bottom: 20px;" placeholder="Exemplo@email.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" style="margin-bottom: 20px;" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Status" value="ativo"/>
            <input type="hidden" asp-for="CargoId" value="1"/>

        </div>

        <div class="col-6">
            <!--Funcionário -->
            <div class="card-func p-4 mb-3">
                <h4>Dados Pessoais</h4>
                <div class="form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" style="margin-bottom: 20px;" placeholder="000.000.000-00"/>
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group mt-4 text-end">
        <a asp-action="Login" class="btn btn-secondary mx-2" style="width: 150px;">Voltar</a>
        <button type="submit" class="btn btn-primary" style="width: 150px;">Salvar</button>
    </div>
</form>
