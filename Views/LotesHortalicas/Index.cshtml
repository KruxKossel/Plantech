@model IEnumerable<Plantech.Models.LotesHortalica>

@{
    ViewData["Title"] = "Lotes de Hortaliças";
}

<br><br>

@if (User.IsInRole("Vendedor"))
{
    <div class="container-fluid fruite">
        <h1 class="mb-5" style="margin-left: -7px;">Lotes de Hortaliças</h1>
        <div class="row">
            <div class="col-12 col-md-8">
                <div class="mb-3">
                    <h4>Categorias</h4>
                    <ul class="list-unstyled fruite-categorie">
                        <li>
                            <div class="d-flex justify-content-between fruite-name">
                                <a href="#"><i class="fas fa-apple-alt me-2"></i>Apples</a>
                                <span>(5)</span>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex justify-content-between fruite-name">
                                <a href="#"><i class="fas fa-apple-alt me-2"></i>Apples</a>
                                <span>(3)</span>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex justify-content-between fruite-name">
                                <a href="#"><i class="fas fa-apple-alt me-2"></i>Apples</a>
                                <span>(2)</span>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-12">
                    <div class="mb-3">
                        <h4 class="mb-2">Preço</h4>
                        <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="200"
                            value="0" oninput="updateFilter()">
                        <output id="amount" name="amount" for="rangeInput">0</output>
                    </div>
                </div>
            </div>

            @foreach (var item in Model)
            {

                <div class="col-md-4 col-12 col-md-4 mb-4 fruite-item-1" data-price="@item.PrecoVenda" style="height: 375px">
                    <div class="rounded position-relative  fruite-item ">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <div class="fruite-img">
                                @if (!string.IsNullOrEmpty(item.Hortalica.CaminhoImagem))
                                {
                                    <img src="@Url.Content("~/images/" + item.Hortalica.CaminhoImagem)"
                                        class="img-fluid w-100 rounded-top" style=" object-fit: cover;" />
                                }
                            </div>
                            <div class="p-4 border border-secondary border-top-0 rounded-bottom" style="height: 180px;">
                                <h4>@Html.DisplayFor(modelItem => item.Nome)</h4>
                                <p>@Html.DisplayFor(modelItem => item.Hortalica.Descricao)</p>
                                <p class="text-dark fs-5 fw-bold mb-0">R$ @item.PrecoVenda / kg</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="text-start">
            <a asp-controller="Vendedor" asp-action="Index" class="btn btn-secondary mb-4">Voltar</a>
        </div>
    </div>

    <!-- JavaScript para Filtro de Preço -->
    <script>
        function updateFilter() {
            const maxPrice = document.getElementById('rangeInput').value;
            document.getElementById('amount').textContent = maxPrice;

            document.querySelectorAll('.fruite-item-1').forEach(item => {
                const itemPrice = parseFloat(item.getAttribute('data-price'));
                if (itemPrice <= maxPrice) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
}
