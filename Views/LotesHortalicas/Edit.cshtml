@model Plantech.ViewModels.LotesHortalicaPendenciaViewModel

@{
    ViewData["Title"] = "Edit";
}
@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
}
<br>

<h2>Editar Lotes Hortali√ßas</h2>
<hr />
<div class="card-func p-4">
    <div class="row">
        <div class="">
            <form asp-action="Edit">

                <div class="form-group" style="display: none;">
                    <input asp-for="Status" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" style="margin-bottom: 20px;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecoVenda" class="control-label"></label>
                    <input asp-for="PrecoVenda" class="form-control" style="margin-bottom: 20px;" />
                    <span asp-validation-for="PrecoVenda" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="DataValidade" class="control-label"></label>
                        <input asp-for="DataValidade" type="date" class="form-control" />
                        <span asp-validation-for="DataValidade" class="text-danger"></span>
                    </div>
                </div>


                <br>
                <div class=" text-end form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" style="width: 150px;" />
                </div>
            </form>
        </div>
    </div>
</div>




<br>
<div>
    <a asp-controller="LotesHortalicas" asp-action="Pendencias" class="btn btn-secondary" style="width: 150px;">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}