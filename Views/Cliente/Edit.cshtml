@model Plantech.ViewModels.ClienteViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}
<div class="bg-white">


    <h2 class="text-start">Editar Cliente</h2>

    <form asp-action="Edit" method="post" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group col-12 col-md-4 col-xl-3">
            <label asp-for="Cnpj" class="control-label"></label>
            <input asp-for="Cnpj" class="form-control" style="margin-bottom: 10px;" />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4 col-xl-3">
            <label asp-for="RazaoSocial" class="control-label"></label>
            <input asp-for="RazaoSocial" class="form-control" style="margin-bottom: 10px;" />
            <span asp-validation-for="RazaoSocial" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4 col-xl-3">
            <label asp-for="Endereco" class="control-label"></label>
            <input asp-for="Endereco" class="form-control" style="margin-bottom: 10px;" />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4 col-xl-3">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" style="margin-bottom: 10px;" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4 col-xl-3">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" style="margin-bottom: 10px;" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4 col-xl-3">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control" style="margin-bottom: 10px;">
                <option value="ativo">Ativo</option>
                <option value="inativo">Inativo</option>
            </select>
        </div>
        <div class="text-end mt-2">
            <a asp-action="Index" class="btn btn-secondary mx-2">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
