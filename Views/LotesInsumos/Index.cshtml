@model IEnumerable<Plantech.DTOs.LotesInsumoDTO>

@{
    ViewData["Title"] = "Index";
}


<br>
<h1>Lotes de Insumos</h1>


@if (User.IsInRole("Administrador") || User.IsInRole("Comprador"))
{
    <div class="border bg-white rounded-2 shadow">
        <div style="max-height: 350px; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrecoUnitario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataEntrada)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataValidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InsumoId)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrecoUnitario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataEntrada)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataValidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsumoId)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i
                                        class="bi bi-pencil"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id " class="btn btn-primary"><i
                                        class="bi bi-info-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <br>
    <div class="text-end">
        <a asp-controller="Comprador" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
}


