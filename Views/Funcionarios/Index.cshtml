@model IEnumerable<Plantech.ViewModels.FuncionarioViewModel>

@{
    ViewData["Title"] = "Funcionários";
}

<br><br>
<h2>@ViewData["Title"]</h2>
<br>
@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}

@if (User.IsInRole("Administrador"))
{
    <div class="card-index">
        <div style="max-height: 350px; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NomeUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Status) F.</th>
                        <th>@Html.DisplayNameFor(model => model.Usuario.Status) U.</th>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Cargo.Funcao)</th>
                        @* <th>@Html.DisplayNameFor(model => model.Descricao)</th> *@
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            if (item != null)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.NomeUsuario)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td style="color: @(item.Status == "ativo" ? "rgb(0, 139, 69)" : "rgb(139, 0, 0)") !important;">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td
                                        style="color: @( item.Usuario.Status == "ativo" ? "rgb(0, 139, 69)" : "rgb(139, 0, 0)") !important;">
                                        @Html.DisplayFor(modelItem => item.Usuario.Status)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Cargo.Funcao)</td>
                                    @* <td>@Html.DisplayFor(modelItem => item.Id)</td> <!-- Adicione esta linha temporariamente --> *@

                                    @if (item.Cargo.Funcao != "Administrador")
                                    {
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                                            <form asp-action="MudarStatus" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-warning">Mudar Status</button>
                                            </form>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Nenhum funcionário encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-end" style="margin-right: 15px;">
        <br>
        <a asp-action="Create" class="btn btn-primary">Adicionar Funcionário</a><br><br>
    </div>
}