@model Plantech.ViewModels.CompraDetalhadaViewModel

@{
    ViewData["Title"] = "Detalhes da Compra";
}

@section Styles {
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />
}

<h2 class="text-center mt-4">@ViewData["Title"]</h2>

    <div class="">
        <h3>OrdensCompra</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataCompra)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCompra)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.RazaoSocial)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Funcionario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Funcionario.Nome)
            </dd>
        </dl>
        <hr>
        <div>
            <h4>Insumos da Compra</h4>
            <div style="max-height: 150px; overflow-y: auto;">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.insumoscompra.FirstOrDefault().Insumo.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.insumoscompra.FirstOrDefault().Quantidade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.insumoscompra.FirstOrDefault().PrecoUnitario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.insumoscompra.FirstOrDefault().DataChegada)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var insumo in Model.insumoscompra)
                        {
                            <tr>
                                <td>@insumo.Insumo.Nome</td>
                                <td>@insumo.Quantidade</td>
                                <td>@insumo.PrecoUnitario</td>
                                <td>@insumo.DataChegada</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
        <div class="text-end">
            <dd class="d-flex justify-content-end w-100 mt-4">
                <p style="color: rgb(8, 190, 8);" class="mb-0">Valor total: R$ @Html.DisplayFor(model => model.Total)</p>
            </dd>
        </div>

    </div>


    <div class="text-end mt-2 w-100">
            <a asp-controller="OrdensCompras" asp-action="Index" class="btn btn-primary" style="width: 150px;">Voltar</a>

        @* <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Voltar</a>
        </div> *@
    </div>
