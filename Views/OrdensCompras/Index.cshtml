@model IEnumerable<Plantech.DTOs.OrdensCompraDTO>

@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole("Comprador") || User.IsInRole("Administrador"))
{
    <br><br>
    <h2>Ordens de Compra</h2>
    <div class="card-index">
        <div style="max-height: 350px; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Data Compra</th>
                        <th>Fornecedor</th>
                        <th>Funcionario</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCompra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fornecedor.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Funcionario.Id)
                            </td>
                            <td>
                                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                                @* @if( User.IsInRole("Administrador")){ *@
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                @* } *@

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-end" style="margin-right: 15px;">
        <br>
        <a asp-action="NovaCompra" class="btn btn-primary">Nova Compra</a><br><br>
    </div>

    <div>
        <a asp-controller="Comprador" asp-action="Index" class="btn btn-primary">Voltar a Home</a>
    </div>

    <br>
}