@model IEnumerable<Plantech.DTOs.OrdensCompraDTO>

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole("Comprador") || User.IsInRole("Administrador"))
{
    <br><br>
    <h2>Ordens de Compra</h2>
    <div class="rounded-2 border shadow p-2 bg-white">
        <div style="max-height: 350px; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Data Compra</th>
                        <th>Fornecedor</th>
                        <th>Funcionario</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                             @if(item.Status == "pago"){
            <td  style="color: rgb(0, 139, 69);!important">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            }else{
            <td style="color: rgb(139, 0, 0);!important">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            }
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCompra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fornecedor.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Funcionario.Id)
                            </td>
                            <td>
                                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-info-circle"></i></a>
                                
                                @if( User.IsInRole("Administrador")){
                                @if(item.Status == "pendente"){
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                }

                                <form asp-action="MudarStatus" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-warning">Mudar Status</button>
                                </form>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-end mt-2">
        <a asp-controller="Comprador" asp-action="Index" class="btn btn-secondary mx-2">Voltar</a>
        <a asp-action="NovaCompra" class="btn btn-primary">Nova Compra</a>
    </div>

}
