@model IEnumerable<Plantech.DTOs.InsumoDTO>

@{
    ViewData["Title"] = "Index";
}
<br><br>
@if (User.IsInRole("Comprador") || User.IsInRole("Administrador"))
{
    <h2>Lista de Insumos</h2>

    <div class="border rounded-2 shadow p-1 bg-white">
        <div style="max-height: 5000px; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categoria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tipo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th class="text-center">Ação</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tipo)

                                @if (item.Status == "ativo")
                                {
                                <td style="color: rgb(0, 139, 69);!important">
                                        @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                }
                                else
                                {
                                <td style="color: rgb(139, 0, 0);!important">
                                        @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                }

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary d-inline mr-2"><i
                                        class="bi bi-pencil"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary d-inline mr-2"><i
                                        class="bi bi-info-circle"></i></a>


                                    @if (User.IsInRole("Administrador"))
                                    {
                                    <form method="post" asp-action="MudarStatus" asp-route-id="@item.Id"
                                        onsubmit="return confirm('Tem certeza que deseja mudar o status?');" class="d-inline">
                                        <button type="submit" class="btn btn-warning">Mudar Status</button>
                                    </form>
                                    }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<div class="text-end mt-2">
    <a asp-action="Create" class="btn btn-primary ">Adicionar Insumo</a>
</div>