@model Plantech.ViewModels.InsumoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Insumo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class ="form-control" asp-items="ViewBag.FornecedorId"></select>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4 col-lg-3">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="col-6">
                <div class="form-group col-12 col-md-4 col-lg-3">
                    <label asp-for="ImagemArquivo" class="control-label"></label>
                    <input asp-for="ImagemArquivo" class="form-control" type="file" id="imageUpload"
                        onchange="previewImage(event)" />
                    <span asp-validation-for="ImagemArquivo" class="text-danger"></span>
                </div>

                <img id="imagePreview" src="" alt="Imagem selecionada"
                    style="display:none; width: 640px; height: 440px; border: 2px solid #ccc; margin-top: 10px;" />

                <div class="form-group text-end mt-3">
                    <button type="submit" class="btn btn-primary">Adicionar</button>
                </div>

            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
